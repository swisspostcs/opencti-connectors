{
  "index_patterns": [
    "${pattern}"
  ],
  "template": {
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 1,
      "index.lifecycle.name": "${policy_name}",
      "index.lifecycle.rollover_alias": "${rollover_alias}"
    },
    "aliases": {
      "${rollover_alias}": {}
    },
    "mappings": {
      "dynamic_templates": [
        {
          "labels": {
            "path_match": "labels.*",
            "mapping": {
              "type": "keyword"
            },
            "match_mapping_type": "string"
          }
        },
        {
          "fields": {
            "path_match": "fields.*",
            "mapping": {
              "type": "keyword"
            },
            "match_mapping_type": "string"
          }
        },
        {
          "strings_as_keyword": {
            "mapping": {
              "ignore_above": 1024,
              "type": "keyword"
            },
            "match_mapping_type": "string"
          }
        }
      ],
      "date_detection": false,
      "properties": {
        "@timestamp": {
          "type": "date"
        },
        "threat": {
          "properties": {
            "indicator": {
              "properties": {
                "confidence": {
                  "type": "alias",
                  "path": "threatintel.indicator.confidence"
                },
                "description": {
                  "type": "alias", 
                  "path": "threatintel.indicator.description"
                },
                "first_seen": {
                  "type": "alias",
                  "path": "threatintel.indicator.first_seen"
                },
                "last_seen": {
                  "type": "alias",
                  "path": "threatintel.indicator.last_seen"
                },
                "ip": {
                  "type": "alias",
                  "path": "threatintel.indicator.ip"
                },
                "port": {
                  "type": "alias",
                  "path": "threatintel.indicator.port"
                },
                "domain": {
                  "type": "alias",
                  "path": "threatintel.indicator.domain"
                },
                "type": {
                  "type": "alias",
                  "path": "threatintel.indicator.type"
                },
                "provider": {
                  "type": "alias",
                  "path": "threatintel.indicator.provider"
                },
                "sightings": {
                  "type": "alias",
                  "path": "threatintel.indicator.sightings"
                },
                "scanner_stats": {
                  "type": "alias",
                  "path": "threatintel.indicator.scanner_stats"
                },
                "reference": {
                  "type": "alias",
                  "path": "event.url"
                },
                "id": {
                  "type": "alias",
                  "path": "threatintel.stix.id"
                },
                "modified_at": {
                  "type": "alias",
                  "path": "threatintel.opencti.updated_at"
                },
                "email": {
                  "properties": {
                    "address": {
                      "type": "alias",
                      "path": "threatintel.indicator.email.address"
                    }
                  }
                },
                "file": {
                  "properties": {
                    "name": {
                      "type": "alias",
                      "path": "threatintel.indicator.file.name"
                    },
                    "size": {
                      "type": "alias",
                      "path": "threatintel.indicator.file.size"
                    },
                    "type": {
                      "type": "alias",
                      "path": "threatintel.indicator.file.type"
                    },
                    "hash": {
                      "properties": {
                        "md5": {
                          "type": "alias",
                          "path": "threatintel.indicator.file.hash.md5"
                        },
                        "sha1": {
                          "type": "alias",
                          "path": "threatintel.indicator.file.hash.sha1"
                        },
                        "sha256": {
                          "type": "alias",
                          "path": "threatintel.indicator.file.hash.sha256"
                        },
                        "sha512": {
                          "type": "alias",
                          "path": "threatintel.indicator.file.hash.sha512"
                        },
                        "ssdeep": {
                          "type": "alias",
                          "path": "threatintel.indicator.file.hash.ssdeep"
                        },
                        "tlsh": {
                          "type": "alias",
                          "path": "threatintel.indicator.file.hash.tlsh"
                        }
                      }
                    },
                    "pe": {
                      "properties": {
                        "imphash": {
                          "type": "alias",
                          "path": "threatintel.indicator.file.pe.imphash"
                        }
                      }
                    }
                  }
                },
                "url": {
                  "properties": {
                    "original": {
                      "type": "alias",
                      "path": "threatintel.indicator.url.original"
                    },
                    "full": {
                      "type": "alias",
                      "path": "threatintel.indicator.url.full"
                    },
                    "scheme": {
                      "type": "alias",
                      "path": "threatintel.indicator.url.scheme"
                    },
                    "domain": {
                      "type": "alias",
                      "path": "threatintel.indicator.url.domain"
                    },
                    "subdomain": {
                      "type": "alias",
                      "path": "threatintel.indicator.url.subdomain"
                    },
                    "registered_domain": {
                      "type": "alias",
                      "path": "threatintel.indicator.url.registered_domain"
                    },
                    "top_level_domain": {
                      "type": "alias",
                      "path": "threatintel.indicator.url.top_level_domain"
                    },
                    "port": {
                      "type": "alias",
                      "path": "threatintel.indicator.url.port"
                    },
                    "path": {
                      "type": "alias",
                      "path": "threatintel.indicator.url.path"
                    },
                    "query": {
                      "type": "alias",
                      "path": "threatintel.indicator.url.query"
                    },
                    "fragment": {
                      "type": "alias",
                      "path": "threatintel.indicator.url.fragment"
                    },
                    "username": {
                      "type": "alias",
                      "path": "threatintel.indicator.url.username"
                    },
                    "password": {
                      "type": "alias",
                      "path": "threatintel.indicator.url.password"
                    },
                    "extension": {
                      "type": "alias",
                      "path": "threatintel.indicator.url.extension"
                    }
                  }
                },
                "registry": {
                  "properties": {
                    "key": {
                      "type": "alias",
                      "path": "threatintel.indicator.registry.key"
                    },
                    "path": {
                      "type": "alias",
                      "path": "threatintel.indicator.registry.path"
                    },
                    "value": {
                      "type": "alias",
                      "path": "threatintel.indicator.registry.value"
                    },
                    "data": {
                      "properties": {
                        "strings": {
                          "type": "alias",
                          "path": "threatintel.indicator.registry.data.strings"
                        }
                      }
                    }
                  }
                },
                "x509": {
                  "properties": {
                    "subject": {
                      "type": "alias",
                      "path": "threatintel.indicator.x509.subject"
                    },
                    "issuer": {
                      "type": "alias",
                      "path": "threatintel.indicator.x509.issuer"
                    },
                    "serial_number": {
                      "type": "alias",
                      "path": "threatintel.indicator.x509.serial_number"
                    },
                    "alternative_names": {
                      "type": "alias",
                      "path": "threatintel.indicator.x509.alternative_names"
                    }
                  }
                },
                "as": {
                  "properties": {
                    "number": {
                      "type": "alias",
                      "path": "threatintel.indicator.as.number"
                    },
                    "organization": {
                      "properties": {
                        "name": {
                          "type": "alias",
                          "path": "threatintel.indicator.as.organization.name"
                        }
                      }
                    }
                  }
                },
                "geo": {
                  "properties": {
                    "region_iso_code": {
                      "type": "alias",
                      "path": "threatintel.indicator.geo.geo.region_iso_code"
                    },
                    "city_name": {
                      "type": "alias",
                      "path": "threatintel.indicator.geo.geo.city_name"
                    },
                    "country_iso_code": {
                      "type": "alias",
                      "path": "threatintel.indicator.geo.geo.country_iso_code"
                    },
                    "country_name": {
                      "type": "alias",
                      "path": "threatintel.indicator.geo.geo.country_name"
                    },
                    "location": {
                      "type": "alias",
                      "path": "threatintel.indicator.geo.geo.location"
                    },
                    "region_name": {
                      "type": "alias",
                      "path": "threatintel.indicator.geo.geo.region_name"
                    }
                  }
                },
                "marking": {
                  "properties": {
                    "tlp": {
                      "type": "alias",
                      "path": "threatintel.indicator.marking.tlp"
                    }
                  }
                },
                "matched": {
                  "properties": {
                    "atomic": {
                      "type": "alias",
                      "path": "threatintel.indicator.matched.atomic"
                    },
                    "field": {
                      "type": "alias",
                      "path": "threatintel.indicator.matched.field"
                    },
                    "type": {
                      "type": "alias",
                      "path": "threatintel.indicator.matched.type"
                    }
                  }
                }
              }
            },
            "feed": {
              "properties": {
                "reference": {
                  "type": "alias",
                  "path": "event.reference"
                }
              }
            }
          }
        },
        "threatintel": {
          "properties": {
            "indicator": {
              "properties": {
                "registry": {
                  "properties": {
                    "path": {
                      "ignore_above": 1024,
                      "type": "keyword"
                    },
                    "data": {
                      "properties": {
                        "strings": {
                          "ignore_above": 1024,
                          "type": "keyword"
                        }
                      }
                    },
                    "value": {
                      "ignore_above": 1024,
                      "type": "keyword"
                    },
                    "key": {
                      "ignore_above": 1024,
                      "type": "keyword"
                    }
                  }
                },
                "first_seen": {
                  "ignore_above": 1024,
                  "type": "keyword"
                },
                "last_seen": {
                  "type": "date"
                },
                "ip": {
                  "type": "ip"
                },
                "confidence": {
                  "ignore_above": 1024,
                  "type": "keyword"
                },
                "module": {
                  "ignore_above": 1024,
                  "type": "keyword"
                },
                "sightings": {
                  "type": "long"
                },
                "description": {
                  "ignore_above": 1024,
                  "type": "keyword"
                },
                "type": {
                  "ignore_above": 1024,
                  "type": "keyword"
                },
                "url": {
                  "properties": {
                    "extension": {
                      "ignore_above": 1024,
                      "type": "keyword"
                    },
                    "original": {
                      "ignore_above": 1024,
                      "type": "keyword"
                    },
                    "scheme": {
                      "ignore_above": 1024,
                      "type": "keyword"
                    },
                    "top_level_domain": {
                      "ignore_above": 1024,
                      "type": "keyword"
                    },
                    "query": {
                      "ignore_above": 1024,
                      "type": "keyword"
                    },
                    "path": {
                      "ignore_above": 1024,
                      "type": "keyword"
                    },
                    "registered_domain": {
                      "ignore_above": 1024,
                      "type": "keyword"
                    },
                    "fragment": {
                      "ignore_above": 1024,
                      "type": "keyword"
                    },
                    "password": {
                      "ignore_above": 1024,
                      "type": "keyword"
                    },
                    "port": {
                      "type": "long"
                    },
                    "domain": {
                      "ignore_above": 1024,
                      "type": "keyword"
                    },
                    "subdomain": {
                      "ignore_above": 1024,
                      "type": "keyword"
                    },
                    "full": {
                      "ignore_above": 1024,
                      "type": "keyword"
                    },
                    "username": {
                      "ignore_above": 1024,
                      "type": "keyword"
                    }
                  }
                },
                "scanner_stats": {
                  "type": "long"
                },
                "geo": {
                  "properties": {
                    "geo": {
                      "properties": {
                        "region_iso_code": {
                          "ignore_above": 1024,
                          "type": "keyword"
                        },
                        "city_name": {
                          "ignore_above": 1024,
                          "type": "keyword"
                        },
                        "country_iso_code": {
                          "ignore_above": 1024,
                          "type": "keyword"
                        },
                        "country_name": {
                          "ignore_above": 1024,
                          "type": "keyword"
                        },
                        "location": {
                          "type": "geo_point"
                        },
                        "region_name": {
                          "ignore_above": 1024,
                          "type": "keyword"
                        }
                      }
                    }
                  }
                },
                "x509": {
                  "properties": {
                    "subject": {
                      "ignore_above": 1024,
                      "type": "keyword"
                    },
                    "serial_number": {
                      "ignore_above": 1024,
                      "type": "keyword"
                    },
                    "alternative_names": {
                      "ignore_above": 1024,
                      "type": "keyword"
                    },
                    "issuer": {
                      "ignore_above": 1024,
                      "type": "keyword"
                    }
                  }
                },
                "as": {
                  "properties": {
                    "number": {
                      "type": "long"
                    },
                    "organization": {
                      "properties": {
                        "name": {
                          "ignore_above": 1024,
                          "type": "keyword",
                          "fields": {
                            "text": {
                              "norms": false,
                              "type": "text"
                            }
                          }
                        }
                      }
                    }
                  }
                },
                "marking": {
                  "properties": {
                    "tlp": {
                      "ignore_above": 1024,
                      "type": "keyword"
                    }
                  }
                },
                "file": {
                  "properties": {
                    "size": {
                      "type": "long"
                    },
                    "pe": {
                      "properties": {
                        "imphash": {
                          "ignore_above": 1024,
                          "type": "keyword"
                        }
                      }
                    },
                    "name": {
                      "ignore_above": 1024,
                      "type": "keyword"
                    },
                    "type": {
                      "ignore_above": 1024,
                      "type": "keyword"
                    },
                    "hash": {
                      "properties": {
                        "sha1": {
                          "ignore_above": 1024,
                          "type": "keyword"
                        },
                        "sha256": {
                          "ignore_above": 1024,
                          "type": "keyword"
                        },
                        "sha512": {
                          "ignore_above": 1024,
                          "type": "keyword"
                        },
                        "tlsh": {
                          "ignore_above": 1024,
                          "type": "keyword"
                        },
                        "ssdeep": {
                          "ignore_above": 1024,
                          "type": "keyword"
                        },
                        "md5": {
                          "ignore_above": 1024,
                          "type": "keyword"
                        }
                      }
                    }
                  }
                },
                "provider": {
                  "ignore_above": 1024,
                  "type": "keyword"
                },
                "port": {
                  "type": "long"
                },
                "domain": {
                  "ignore_above": 1024,
                  "type": "keyword"
                },
                "matched": {
                  "properties": {
                    "field": {
                      "ignore_above": 1024,
                      "type": "keyword"
                    },
                    "atomic": {
                      "ignore_above": 1024,
                      "type": "keyword"
                    },
                    "type": {
                      "ignore_above": 1024,
                      "type": "keyword"
                    }
                  }
                },
                "dataset": {
                  "ignore_above": 1024,
                  "type": "keyword"
                },
                "email": {
                  "properties": {
                    "address": {
                      "ignore_above": 1024,
                      "type": "keyword"
                    }
                  }
                }
              }
            },
            "opencti": {
              "properties": {
                "internal_id": {
                  "ignore_above": 1024,
                  "type": "keyword"
                },
                "valid_from": {
                  "type": "date"
                },
                "valid_until": {
                  "type": "date"
                },
                "enable_detection": {
                  "type": "boolean"
                },
                "risk_score": {
                  "type": "long"
                },
                "confidence": {
                  "type": "long"
                },
                "original_pattern": {
                  "ignore_above": 1024,
                  "type": "keyword"
                },
                "pattern_type": {
                  "ignore_above": 1024,
                  "type": "keyword"
                },
                "updated_at": {
                  "type": "date"
                },
                "killchain_phases": {
                  "type": "nested",
                  "properties": {
                    "killchain_name": {
                      "type": "keyword",
                      "ignore_above": 1024
                    },
                    "phase_name": {
                      "type": "keyword",
                      "ignore_above": 1024
                    },
                    "stix_id": {
                      "type": "keyword",
                      "ignore_above": 1024
                    },
                    "opencti_phase_order": {
                      "type": "long"
                    }
                  }
                },
                "mitre": {
